extends layout
include mixins/galleryNav
include mixins/links
block content
  .container
    .row(style="min-height:300px")
      .col-6
        div(style="height:250px; display:flex; justify-content:center; padding-top:20px").col-12.text-center
          img(id='logo' src='\\images\\logo.png')
      .col-6
        .row
          .col-12
            div(style="display:flex; justify-content:left; padding-top:80px").col-12
              p.fancyText "The world moves fast, changing everything around us with each new day. Photography is a gift that can keep us in a moment forever, blissfully eternal."
              p &nbsp;
            div(style="padding-left:20px")              
              p.fancyText -Ali Novak
    .row(style="min-height:0px")
      .col-12.text-center
        +galleryNav
    .row(style="min-height:540px")
      .col-1
      .col-10
        .container
          p &nbsp;
          #slideShowMain.row
            div(style="height:400px; display:flex; justify-content:center").col-12.text-center
              if galleryImages
                img(id="mainSlide" name="slide" style="height:100%" src=`\\images\\${gallerySelected}\\${galleryImages[0].imageName}`)
              else
                img(id="mainSlide" name="slide" style="height:100%")
        p &nbsp;        
        .container(style="max-width:560px; min-height:80px; overflow-x:hidden; overflow-y:hidden")      
          #slideShowThumbnails.row(style="overflow-x:auto; overflow-y:hidden")
            .col-12.text-center
              .btn-group(style="margin-left:-16px")
                if galleryImages 
                  //- - var images = [galleryImages]
                  each image in galleryImages
                    button.btn.p-0.m-0
                      img.p-0.m-0(src=`\\images\\${gallerySelected}\\${image.imageName}` style="width:80px; height:80px; object-fit:cover")
      .col-1
    .row 
      .col-12.text-center 
        +links
  append head
        script(src='/javascripts/main.js')
